{
  "name": "PIA",
  "version": "2.2.0",
  "description": "Version Portable Outil PIA",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "mac": "electron-builder -m",
    "win": "electron-builder -w",
    "linux": "electron-builder -l",
    "win-cert": "electron-builder create-self-signed-cert -p atnos",
    "publish-to-github": "electron-builder build -mwl -p onTagOrDraft",
    "clean": "rimraf ./dist/"
  },
  "author": "ATNOS",
  "repository": "https://github.com/kosmas58/pia-app",
  "keywords": [
    "Electron",
    "PIA"
  ],
  "build": {
    "appId": "com.atnos.pia",
    "directories": {
      "buildResources": ".",
      "output": "releases"
    },
    "mac": {
      "publish": [
        "github"
      ],
      "category": "public.app.category.productivity"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ],
      "certificateFile": "private/atnos.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "ATNOS"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "rimraf": "^2.6.3"
  },
  "dependencies": {
    "electron-log": "^3.0.7",
    "electron-updater": "^4.1.2",
    "electron-window-state": "^5.0.3"
  }
}
